@{
    ViewData["Title"] = "Home Page";
}


<div class="hero">
    <h1>¡Bienvenido a Battleship!</h1>
    <p>Únete a la batalla y domina el campo.</p>
    <form  method="get" action="@Url.Action("Index", "Players")">
        <button type="submit" class="btn btn-lg btn-dark w-100">Jugar ahora</button>
    </form>
    <form class="mt-3" method="get" action="@Url.Action("Create", "Players")">
        <button type="submit" class="btn btn-secondary btn-lg w-100">Registrarse</button>
    </form>
</div>





@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}