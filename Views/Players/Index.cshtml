@model IEnumerable<Battleship.Models.Players>

@{
    ViewData["Title"] = "Lista de Jugadores";
}

<h2 class="text-center text-white">Jugadores Registrados</h2>

<table class="table table-dark table-hover rounded shadow-lg">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PlayerID)</th>
            <th>@Html.DisplayNameFor(model => model.PlayerName)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr onclick="window.location.href='@Url.Action("Index", "Games", new { id = player.PlayerID, name = player.PlayerName })'" style="cursor: pointer;">
                <td>@player.PlayerID</td>
                <td>@player.PlayerName</td>
                <td>
                    <form asp-action="DeleteConfirmed" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este jugador?');">
                        <input type="hidden" name="id" value="@player.PlayerID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Borrar
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    
}
