@model Battleship.Models.Players

@{
    ViewData["Title"] = "Register Page";
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}

<div class="container mt-5 bg-dark">
    <div class="card shadow-sm p-4 rounded bg-dark">
        <h2 class="text-center mb-4 text-white">Crear nuevo jugador</h2>
        <form class="bg-dark p-4 rounded" asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label for="PlayerName" class="text-white">Ingresa tu nombre</label>
                <input type="text" class="form-control" id="PlayerName" name="PlayerName" placeholder="Enter your name" required>
            </div>
            <button type="submit" class="btn btn-secondary btn-lg w-100">Crear jugador</button>
        </form>
    </div>
</div>